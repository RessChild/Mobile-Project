<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addTravel">

    <TextView
            android:text="원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintBaseline_toBaselineOf="@+id/editMoney" android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@+id/editMoney"/>
    <TextView
            android:text="(으)로"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintBaseline_toBaselineOf="@+id/editWhere" android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@+id/editWhere"/>
    <TextView
            android:text="여행 추가하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginStart="8dp" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="어디를?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp" android:layout_marginStart="36dp"/>
    <TextView
            android:text="언제부터 언제까지?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/editWhere" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editWhere"/>
    <TextView
            android:text="몇명과 함께?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="35dp"
            android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/date2"/>
    <TextView
            android:text="비용"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/editPeople"
            app:layout_constraintTop_toBottomOf="@+id/editPeople"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editWhere"
            tools:text="@tools:sample/cities"
            android:defaultFocusHighlightEnabled="true"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="부터"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginTop="49dp"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toBottomOf="@+id/editWhere" app:layout_constraintStart_toEndOf="@+id/editWhere"/>
    <TextView
            android:text="까지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="@+id/textView7"/>
    <TextView
            android:text="명과 함께"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintBaseline_toBaselineOf="@+id/editPeople" android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@+id/editPeople"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editMoney"
            app:layout_constraintStart_toStartOf="@+id/textView6" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editPeople"
            app:layout_constraintStart_toStartOf="@+id/textView5" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <Button
            android:text="추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            app:layout_constraintBaseline_toBaselineOf="@+id/cancel" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"/>
    <Button
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/add" android:layout_marginBottom="44dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date1"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:hint="날짜 선택"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="27dp" android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/date1" android:hint="날짜 선택"/>
</android.support.constraint.ConstraintLayout>