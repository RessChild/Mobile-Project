<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="로그인 임시 창"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/identifier"
            android:layout_marginStart="33dp" android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toTopOf="@+id/identifier"/>
    <Button
            android:text="로그인확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:layout_marginTop="267dp"
            app:layout_constraintTop_toBottomOf="@+id/textview" android:layout_marginBottom="268dp"
            app:layout_constraintEnd_toEndOf="@+id/password" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="61dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/identifier"
            android:hint="ID 입력"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="187dp" android:layout_marginEnd="86dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="PW 입력"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/identifier" android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@+id/identifier"/>

    <Button
            android:id="@+id/join"
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/login"
            android:layout_marginTop="29dp" app:layout_constraintTop_toBottomOf="@+id/login"/>

</android.support.constraint.ConstraintLayout>