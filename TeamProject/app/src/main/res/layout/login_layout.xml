<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="로그인 임시 창"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="116dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.541"/>
    <Button
            android:text="로그인확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="147dp"
            android:layout_marginBottom="268dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/identifier"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/textview"
            android:layout_marginEnd="86dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="ID 입력"
            android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintStart_toStartOf="@+id/editText"
            android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:hint="PW 입력"
            android:gravity="center"
    />
</android.support.constraint.ConstraintLayout>