<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        android:orientation="vertical"
             tools:context=".DReviewFrag4">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:orientation="horizontal" android:layout_weight="1">
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:id="@+id/dr_textname" android:layout_weight="3"
                  android:textSize="35sp"
                  android:text="213"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textSize="24sp"
                                                    android:id="@+id/dr_score" android:text="1sd"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_weight="4" android:text="213"
              android:textSize="17sp"
    android:id="@+id/dr_text"/>
    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                 android:layout_height="0dp"
                                                 android:id="@+id/dr_list"
                                                 android:layout_weight="5">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>