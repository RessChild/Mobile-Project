<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JoinActivity">

    <TextView
            android:text="회원가입 창"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/textView16"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="ID"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/textView17"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBaseline_toBaselineOf="@+id/j_id"
            app:layout_constraintEnd_toStartOf="@+id/j_pw" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginEnd="25dp"
    />
    <TextView
            android:text="PW"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/textView18"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBaseline_toBaselineOf="@+id/j_pw"
            app:layout_constraintEnd_toStartOf="@+id/j_id" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginEnd="17dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/j_pw"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/j_id"
            android:hint="비밀번호 입력"
            app:layout_constraintStart_toEndOf="@+id/textView18" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="아이디 입력"
            android:ems="10"
            android:id="@+id/j_id"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="145dp"
            app:layout_constraintStart_toEndOf="@+id/textView17" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="회원 가입"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/j_join" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="62dp" android:layout_marginStart="78dp"
            app:layout_constraintTop_toBottomOf="@+id/j_pw"/>
    <Button
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/j_cancel"
            app:layout_constraintBaseline_toBaselineOf="@+id/j_join" android:layout_marginEnd="59dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>